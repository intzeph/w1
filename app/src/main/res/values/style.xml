<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/custom_button_background</item>
    </style>

    <style name="CustomErrorTextAppearance" parent="TextAppearance.Design.Error">
        <!-- Customize the alignment and other properties as needed -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:gravity">start</item> <!-- Adjust the alignment -->
    </style>

    <style name="NoBoxTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="CustomTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Customize the stroke color and width -->
        <item name="boxStrokeColor">#EBECF0</item> <!-- Replace with your desired default stroke color -->
        <item name="boxStrokeWidth">2dp</item> <!-- Replace with your desired stroke width -->
    </style>
</resources>